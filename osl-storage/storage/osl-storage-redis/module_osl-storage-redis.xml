<?xml version="1.0" encoding="UTF-8"?>
<project name="module_osl-storage-redis" default="compile.module.osl-storage-redis">
  <dirname property="module.osl-storage-redis.basedir" file="${ant.file.module_osl-storage-redis}"/>
  
