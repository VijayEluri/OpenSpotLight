      <bootclasspath refid="osl-storage-redis.module.bootclasspath"/>
      <classpath refid="osl-storage-redis.module.classpath"/>
      <src refid="osl-storage-redis.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.osl-storage-redis"/>
    </javac>
    
    <copy todir="${osl-storage-redis.output.dir}">
      <fileset dir="${module.osl-storage-redis.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.osl-storage-redis.basedir}/src/main/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.osl-storage-redis.tests" depends="compile.module.osl-storage-redis.production" description="compile module osl-storage-redis; test classes" unless="skip.tests">
    <mkdir dir="${osl-storage-redis.testoutput.dir}"/>
    <javac destdir="${osl-storage-redis.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.osl-storage-redis}/javac">
      <compilerarg line="${compiler.args.osl-storage-redis}"/>
      <classpath refid="osl-storage-redis.module.classpath"/>
      <classpath>
        <path refid="osl-storage-redis.module.classpath"/>
        <pathelement location="${osl-storage-redis.output.dir}"/>
      </classpath>
      <src refid="osl-storage-redis.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.osl-storage-redis"/>
    </javac>
    
    <copy todir="${osl-storage-redis.testoutput.dir}">
      <fileset dir="${module.osl-storage-redis.basedir}/src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.osl-storage-redis.basedir}/src/test/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.osl-storage-redis" description="cleanup module">
    <delete dir="${osl-storage-redis.output.dir}"/>
    <delete dir="${osl-storage-redis.testoutput.dir}"/>
  </target>
</project>