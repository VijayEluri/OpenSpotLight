		<dependency>
			<groupId>antlr</groupId>
			<artifactId>stringtemplate</artifactId>
		</dependency>
		<!-- xml easy manipulation -->
		<dependency>
			<groupId>com.thoughtworks.xstream</groupId>
			<artifactId>xstream</artifactId>
		</dependency>
